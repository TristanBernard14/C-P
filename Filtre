    <script>
        const categorySelect = document.getElementById("category");
        const beautyFilter = document.getElementById("beauty-filter");
        const productFilters = document.getElementById("product-filters");

        function toggleBeautyFilter() {
            if (categorySelect.value === "option1") {
                beautyFilter.style.display = "flex";
                productFilters.style.display = "flex";
            } else {
                beautyFilter.style.display = "none";
                productFilters.style.display = "none";
            }
        }

        categorySelect.addEventListener("change", toggleBeautyFilter);
        toggleBeautyFilter(); // Appeler la fonction au chargement initial
    </script>
